<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>messageapp</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <security-constraint>
       <display-name>SecurityConstraint</display-name>
       <web-resource-collection>
            <web-resource-name>MessageApp</web-resource-name>
           <url-pattern>/app/*</url-pattern>
       </web-resource-collection>
       <!-- 
       <auth-constraint>
           <role-name>User</role-name>
       </auth-constraint>
        -->
       <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
       </user-data-constraint>
   </security-constraint>
   <!-- 
   <login-config>
  		<auth-method>BASIC</auth-method>
		<realm-name>UserRealm</realm-name>
	</login-config>
    -->
   	<login-config>
       <auth-method>FORM</auth-method>
       <form-login-config>
       		<form-login-page>/authenticate.jsp</form-login-page>
       		<form-error-page>/loginerror.html</form-error-page>  
		</form-login-config>
   </login-config>

  <context-param>
    <param-name>DB_USER</param-name>
    <param-value>username</param-value>
  </context-param>
  <context-param>
    <param-name>DB_PASSWORD</param-name>
    <param-value>password</param-value>
  </context-param>
  <context-param>
    <param-name>DB_NAME</param-name>
    <param-value>messageapp</param-value>
  </context-param>
  <context-param>
    <param-name>DB_URL</param-name>
    <param-value>mongodb://localhost:27017</param-value>
  </context-param>
  <context-param>
    <param-name>HOST</param-name>
    <param-value>messageapp.elasticbeanstalk.com</param-value>
  </context-param>
  <context-param>
    <param-name>SMTP_HOST</param-name>
    <param-value>smtp.gmail.com</param-value>
  </context-param>
  <context-param>
    <param-name>SMTP_PORT</param-name>
    <param-value>587</param-value>
  </context-param>
  <context-param>
    <param-name>FROM_EMAIL</param-name>
    <param-value>messageapp2016@gmail.com</param-value>
  </context-param>
  <context-param>
    <param-name>FROM_EMAIL_PASSWORD</param-name>
    <param-value>1234Zxcv</param-value>
  </context-param>
  <context-param>
    <param-name>RELATIVE_REGISTRATION_LINK</param-name>
    <param-value>register/register.html</param-value>
  </context-param>
  <context-param>
    <param-name>EMAIL_SUBJECT_INVITE</param-name>
    <param-value>Invitation to join MessageApp</param-value>
  </context-param>
  <context-param>
    <param-name>EMAIL_SUBJECT_ACTIVATE</param-name>
    <param-value>Activate your MessageApp account</param-value>
  </context-param>
  <context-param>
    <param-name>EMAIL_SUBJECT_WELCOME</param-name>
    <param-value>Welcome to MessageApp</param-value>
  </context-param>
</web-app>